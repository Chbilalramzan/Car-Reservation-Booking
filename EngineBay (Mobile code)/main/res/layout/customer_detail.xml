<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/backbtn"
                android:layout_marginLeft="15dp"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_arrow_back_black_24dp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Detail"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="40dp"/>
        </TableRow>

    </LinearLayout>
    <ScrollView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"

                android:drawableLeft="@drawable/ic_title"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:hint="  First Name"
                android:id="@+id/fname"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/lname"
                android:hint="  Last Name"
                android:layout_marginTop="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:id="@+id/pno"
                android:hint="  Ph No"
                android:drawableLeft="@drawable/ic_phno"
                android:layout_marginTop="160dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/cnic"
                android:hint="  CNIC"
                android:drawableLeft="@drawable/ic_id_card"
                android:layout_marginTop="210dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:hint="  Adddress"
                android:id="@+id/address"
                android:drawableLeft="@drawable/ic_notebook"
                android:layout_marginTop="260dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/city"
                android:hint="  City"
                android:drawableLeft="@drawable/ic_building"
                android:layout_marginTop="310dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/postcode"
                android:hint="  PostCode"
                android:drawableLeft="@drawable/ic_qr_code_scan"
                android:layout_marginTop="360dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/country"
                android:hint="  Country"
                android:drawableLeft="@drawable/ic_flag"
                android:layout_marginTop="410dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/submit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/mybutton"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="480dp"
                android:layout_marginLeft="80dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>